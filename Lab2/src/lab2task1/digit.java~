class digit{
    int a;
    digit(int a){
        this.a=a;
    }
    void addmultiply(){
        int sum=0;
        int mul=1;
        for (int i = 0; i < a; i++) {
        if(i%2==0){
           sum+=i;
        }
        else{
            mul*=i;
        }
            
    }
        System.out.println("sum of the integer is : "+sum);
        System.out.println("multiplycation of the integer is : "+mul);
    }}